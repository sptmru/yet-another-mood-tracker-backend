{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug app",
      "sourceMaps": true,
      "smartStep": true,
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--config",
        "nodemon.json"
      ],
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug inbound route scenario",
      "sourceMaps": true,
      "smartStep": true,
      "trace": true,
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--config",
        "nodemon.json"
      ],
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ],
    }
  ]
}
